      <tr>
        <th>Full Name</th>
        <th>Email</th>
        <th>Mobile</th>
        <th>City</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
 {{#each list}}
 <tr>
     <td>{{this.Fullname}}</td>
     <td>{{this.Email}}</td>
     <td>{{this.Mobile}}</td>
     <td>{{this.City}}</td>
     <td>
         <a href="/{{this._id}}"> <i class="fa fa-pencil-alt fa-lg" aria-hidden="true"></i> </a>

         <a href="/delete/{{this._id}}" onClick="return confirm('Are you sure you want to delete the record?')"> <i class="fa fa-trash fa-lg" aria-hidden="true"></i> </a>
     </td>

 </tr>
 {{/each}}
    </tbody>
  </table>
  </body>
</html>
