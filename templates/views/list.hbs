<html lang="en">
  <head>
    {{>headerlinks}}
  </head>
  <body>
      <h3><a class="btn btn-secondary" href="/"> <i class="fa fa-plus" aria-hidden="true"></i> Create New </a> Employee List</h3>
 <table class="table table-striped">
